<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo Application</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;500;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/f7dffca4d8.js" crossorigin="anonymous"></script>
    <link href='/stylesheets/fullcalendar.css' rel='stylesheet' />
    <script src='/javascripts/fullcalendar.js'></script>
    <link rel="stylesheet" href="/stylesheets/mainstyle.css">
    <link rel="stylesheet" href="/stylesheets/navbar.css">
</head>
<body>
    <%- include('./partials/navbar') %>
    <main>
        <h1><%= user.username %>'s Calendar View <a href='/todoList/<%=user._id%>/cal'><i class="far fa-calendar"></i></a>
            <a href='/todoList/<%=user._id%>'><i class="fas fa-clipboard-list"></i></a></h1>
        <div class="calendarMain">
            <div id='datelessTasks'>
                <% for (let todo of user.todos) {  %>
                    <% if(todo.status !== "Complete") { %>  
                    <div class="todo-item" id="<%=todo._id%>" class="prty-<%=todo.priority%>" draggable="true">
                        <div class="todo-item-header">
                            <input type="text" readonly="true" value="<%=todo.task%>" id="<%=todo._id%>-task">
                        </div>
                    </div>
                <% }} %> 
            </div>
            <div id='calendar'></div>
        </div>
    </main>

    <script>
        const user = <%-JSON.stringify(user)%>;
    </script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    <script src="/javascripts/maincaljs.js"></script>
</body>
</html>